{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--workspace"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo test --workspace"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"options": {
				"env": {
					"RUST_BACKTRACE": "1",
				}
			},
			"label": "rust: cargo run"
		},
		{
			"type": "cargo",
			"command": "doc",
			"args": [
				"--open",
				"--workspace"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo doc --open --workspace"
		},
		{
			"type": "cargo",
			"command": "check",
			"args": [
				"--workspace"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo check --workspace"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--workspace"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build --workspace"
		}
	]
}